{
  "name": "vsc-json-extension",
  "displayName": "JSON Visualizer",
  "description": "A VSCode extension for JSON visualization and processing",
  "version": "0.0.2",
  "license": "MIT",
  "publisher": "nigelwgmajor",
  "repository": {
    "type": "git",
    "url": "https://github.com/nigelwgmajor/vsc-json-extension"
  },
  "icon": "media/sidebar-icon.png",
  "engines": {
    "vscode": "^1.92.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebugResolve:coreclr",
    "onDebug",
    "onCommand:jsonViewer.openViewer",
    "onCommand:jsonViewer.exportHtml",
    "onCommand:jsonViewer.sortJson",
    "onCommand:to-json-visual-from-clipboard",
    "onCommand:to-debug-dump-cs",
    "onCommand:to-debug-dump-ts",
    "onCommand:jsonViewer.visualizeAtBreakpoint",
    "onCommand:jsonViewer.stopVisualizingAtBreakpoint",
    "onCommand:jsonViewer.injectJsonDumpIntoSelection",
    "onCommand:jsonViewer.deserializeJsonDump"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "j2html.editor",
        "displayName": "Json Visualizer",
        "selector": [
          {
            "filenamePattern": "*.json"
          }
        ],
        "priority": "option",
        "icon": "media/sidebar-icon.svg"
      }
    ],
    "commands": [
      {
        "command": "jsonViewer.openViewer",
        "title": "Json Visualizer",
        "icon": "media/sidebar-icon.svg"
      },
      {
        "command": "jsonViewer.exportHtml",
        "title": "Export JSON as HTML",
        "icon": "media/save-html.svg"
      },
      {
        "command": "jsonViewer.sortJson",
        "title": "AlphaSort JSON",
        "icon": "$(sort-preference)"
      },
      {
        "command": "jsonViewer.visualizeAtBreakpoint",
        "title": "Json Visualizer: Visualize at Breakpoints",
        "icon": "$(debug-pause)"
      },
      {
        "command": "jsonViewer.stopVisualizingAtBreakpoint",
        "title": "Json Visualizer: Stop Visualizing at Breakpoints",
        "icon": "$(debug-stop)"
      },
      {
        "command": "jsonViewer.injectJsonDumpIntoSelection",
        "title": "Json Visualizer: Inject into Selected Variable",
        "icon": "$(debug-step-into)"
      },
      {
        "command": "jsonViewer.deserializeJsonDump",
        "title": "Json Visualizer: Inject into Debugger",
        "icon": "$(debug-step-into)"
      },
      {
        "command": "to-json-visual-from-clipboard",
        "title": "Json Visualize from clipboard (JSON/TSV/CSV)"
      },
      {
        "command": "to-debug-dump-cs",
        "title": "to-debug-dump-cs"
      },
      {
        "command": "to-debug-dump-ts",
        "title": "to-debug-dump-ts"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "jsonViewer.openViewer",
          "when": "resourceLangId == json",
          "group": "navigation"
        },
        {
          "command": "jsonViewer.exportHtml",
          "when": "resourceLangId == json",
          "group": "navigation"
        },
        {
          "command": "jsonViewer.sortJson",
          "when": "resourceLangId == json || resourceLangId == jsonc",
          "group": "navigation"
        },
        {
          "command": "jsonViewer.injectJsonDumpIntoSelection",
          "when": "resourceLangId == json",
          "group": "navigation"
        },
        {
          "command": "jsonViewer.deserializeJsonDump",
          "when": "resourceLangId == json",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "jsonViewer.openViewer",
          "when": "resourceLangId == json"
        },
        {
          "command": "jsonViewer.exportHtml",
          "when": "resourceLangId == json"
        },
        {
          "command": "jsonViewer.sortJson",
          "when": "resourceLangId == json || resourceLangId == jsonc"
        },
        {
          "command": "jsonViewer.visualizeAtBreakpoint",
          "when": "resourceLangId == csharp"
        },
        {
          "command": "jsonViewer.stopVisualizingAtBreakpoint",
          "when": "resourceLangId == csharp"
        },
        {
          "command": "jsonViewer.injectJsonDumpIntoSelection",
          "when": "resourceLangId == json"
        },
        {
          "command": "jsonViewer.deserializeJsonDump",
          "when": "resourceLangId == json"
        },
        {
          "command": "to-json-visual-from-clipboard"
        },
        {
          "command": "to-debug-dump-js"
        },
        {
          "command": "to-debug-dump-cs"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.2",
    "@types/node": "^18.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.3",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {}
}
